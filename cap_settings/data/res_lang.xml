<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data noupdate="1">
        <record model="res.lang" id="base.lang_en">
            <field name="active">1</field>
        </record>
        <record model="res.lang" id="base.lang_fr">
            <field name="active">1</field>
        </record>
        <record model="res.lang" id="base.lang_de">
            <field name="active">1</field>
        </record>

        <record model="base.language.install" id="lang_en">
            <field name="lang">en_US</field>
            <field name="overwrite">True</field>
        </record>
        <record model="base.language.install" id="lang_de">
            <field name="lang">de_DE</field>
            <field name="overwrite">True</field>
        </record>
        <record model="base.language.install" id="lang_fr">
            <field name="lang">fr_FR</field>
            <field name="overwrite">True</field>
        </record>

        <function name="lang_install" model="base.language.install">
            <value eval="[ref('cap_settings.lang_en')]"/>
        </function>
        <function name="lang_install" model="base.language.install">
            <value eval="[ref('cap_settings.lang_de')]"/>
        </function>
        <function name="lang_install" model="base.language.install">
            <value eval="[ref('cap_settings.lang_fr')]"/>
        </function>
    </data>
</odoo>