<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="maintenance_equipment_view_form_01" model="ir.ui.view">
        <field name="name">maintenance_equipment_view_form_01</field>
        <field name="model">maintenance.equipment</field>
        <field name="inherit_id" ref="maintenance.hr_equipment_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='category_id']" position="before">
                <field name="tosa_customer_code"        attrs="{'invisible': [('company_id', '!=', %(cap_settings.company_tosa)d )]}"/>
                <field name="tosa_warranty_end_date"    attrs="{'invisible': [('company_id', '!=', %(cap_settings.company_tosa)d )]}"/>
            </xpath>

            <xpath expr="//field[@name='technician_user_id']" position="after">
                <field name="puissance_puissance"           attrs="{'invisible': ['|', ('company_id', '=', %(cap_settings.company_tosa)d), ('category_id', '=', False)]}"/>
                <field name="puissance_puissance_unit"      attrs="{'invisible': ['|', ('company_id', '=', %(cap_settings.company_tosa)d), ('category_id', '=', False)]}"/>
                <field name="puissance_voltage"             attrs="{'invisible': ['|', ('company_id', '=', %(cap_settings.company_tosa)d), ('category_id', '=', False)]}"/>
                <field name="puissance_type"                attrs="{'invisible': ['|', ('company_id', '=', %(cap_settings.company_tosa)d), ('category_id', '=', False)]}"/>
                <field name="puissance_warranty_duration"   attrs="{'invisible': [('company_id', '=', %(cap_settings.company_tosa)d)]}"/>
                <field name="puissance_sap_project_num"     attrs="{'invisible': [('company_id', '=', %(cap_settings.company_tosa)d)]}"/>
                <field name="puissance_sap_design"          attrs="{'invisible': [('company_id', '=', %(cap_settings.company_tosa)d)]}"/>
                <field name="puissance_order_num"           attrs="{'invisible': [('company_id', '=', %(cap_settings.company_tosa)d)]}"/>
                <field name="puissance_transfo_type"        attrs="{'invisible': ['|', ('company_id', '=', %(cap_settings.company_tosa)d), ('category_id', '=', False)]}"/>
                <field name="puissance_project_manager"     attrs="{'invisible': [('company_id', '=', %(cap_settings.company_tosa)d)]}"/>
                <field name="commissioning_year"            attrs="{'invisible': [('company_id', '=', %(cap_settings.company_tosa)d)]}"/>
            </xpath>
        </field>
    </record>
</odoo>