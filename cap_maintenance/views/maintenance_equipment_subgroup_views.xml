<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!-- TREE for equipement subgroup -->
    <record id="maintenance_equipment_subgroup_view_tree_01" model="ir.ui.view">
        <field name="name">maintenance_equipment_subgroup_view_tree_01</field>
        <field name="model">maintenance.equipment.subgroup</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="equipment_group_id" />
                <field name="company_id" />
            </tree>
        </field>
    </record>

    <!-- FORM for equipement subgroup -->
    <record id="maintenance_equipment_subgroup_view_form_01" model="ir.ui.view">
        <field name="name">maintenance_equipment_subgroup_view_form_01</field>
        <field name="model">maintenance.equipment.subgroup</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="equipment_group_id" options="{'no_create': True, 'no_open': True}" attrs="{'required': [('company_id', '=', %(cap_settings.company_tosa)d)], 'invisible': [('company_id', '!=', %(cap_settings.company_tosa)d)]}"/>
                            <field name="company_id" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_maintenance_equipement_subgroup_tree">
        <field name="name">maintenance.equipment.subgroup</field>
        <field name="res_model">maintenance.equipment.subgroup</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="menu_equipement_subgroup_tree"
        name="Equipment SubGroups"
        parent="maintenance.menu_maintenance_configuration"
        groups="maintenance.group_equipment_manager"
        action="action_maintenance_equipement_subgroup_tree"
        sequence="40"/>

</odoo>