<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.maintenance</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Maintenance" string="Maintenance" data-key="maintenance" groups="maintenance.group_equipment_manager">
                    <div id="mailing_lists">
                        <h2>Mailing Lists</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_right_pane">
                                    <span class="o_form_label">Mailing Customer Timesheet</span>
                                    <span class="fa fa-lg fa-building-o" title="Values set here are company-specific." aria-label="Values set here are company-specific." groups="base.group_multi_company" role="img"/>
                                    <div class="text-muted">
                                        Contacts that will automatically be included in Mailing List Customer Timesheet
                                    </div>
                                    <div class="content-group">
                                        <div class="mt16 row">
                                            <field name="mailing_list_work_report_partner_ids" widget="many2many_tags"/>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_right_pane">
                                    <span class="o_form_label">Mailing List Preparation</span>
                                    <span class="fa fa-lg fa-building-o" title="Values set here are company-specific." aria-label="Values set here are company-specific." groups="base.group_multi_company" role="img"/>
                                    <div class="text-muted">
                                        Contacts that will automatically be included in Mailing List Preparation
                                    </div>
                                    <div class="content-group">
                                        <div class="mt16 row">
                                            <field name="mailing_list_preparation_partner_ids" widget="many2many_tags"/>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_right_pane">
                                    <span class="o_form_label">Mailing Internal Timesheet</span>
                                    <span class="fa fa-lg fa-building-o" title="Values set here are company-specific." aria-label="Values set here are company-specific." groups="base.group_multi_company" role="img"/>
                                    <div class="text-muted">
                                        Contacts that will automatically be included in Mailing List Internal Timesheet
                                    </div>
                                    <div class="content-group">
                                        <div class="mt16 row">
                                            <field name="mailing_list_payment_partner_ids" widget="many2many_tags"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <record id="maintenance_config_settings_action" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_id" ref="res_config_settings_view_form"/>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module' : 'maintenance'}</field>
    </record>

    <menuitem id="maintenance_config_settings_menu"
        name="Settings"
        parent="maintenance.menu_maintenance_configuration"
        action="maintenance_config_settings_action"
        groups="base.group_system"
        sequence="0"/>

</odoo>
