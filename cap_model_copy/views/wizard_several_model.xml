<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="wizard_several_copy_view_form_01" model="ir.ui.view">
        <field name="name">wizard_several_copy_view_form_01</field>
        <field name="model">wizard.several.copy</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="number_of_copy" class="oe_inline"/>
                </group>
                <footer>
                    <button string="Execute" name="copy_several_times" class="btn-primary" type="object" />
                    <button string="Cancel" special="cancel" class="btn-secondary" type="object" />
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_view_wizard_several_copy">
        <field name="name">Duplicate Several Times</field>
        <field name="res_model">wizard.several.copy</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>